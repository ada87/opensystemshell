{
  "name": "opensystemshell",
  "displayName": "Open In System Shell",
  "description": "Open system terminal and enter current directory",
  "version": "0.1.5",
  "publisher": "xiangda",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ada87/opensystemshell.git"
  },
  "icon": "icon.png",
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**"
  ],
  "contributes": {
    "commands": [
      {
        "command": "opensystemshell.openFolderInTerminal",
        "title": "Open in System Shell",
        "icon": "$(terminal)"
      }
    ],
    "configuration": {
      "title": "Open In System Shell",
      "properties": {
        "opensystemshell.showInContextMenu": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Open in System Shell' in the explorer context menu"
        },
        "opensystemshell.useDefault": {
          "type": "boolean",
          "default": true,
          "description": "Use VS Code's terminal profile settings when available, otherwise use platform defaults (PowerShell/iTerm/Bash)"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "when": "config.opensystemshell.showInContextMenu",
          "command": "opensystemshell.openFolderInTerminal",
          "group": "1_modification@99"
        }
      ]
    },
    "keybindings": [
      {
        "command": "opensystemshell.openFolderInTerminal",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus || filesExplorerFocus || !editorFocus"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "24.x",
    "typescript": "^5.9.3"
  }
}